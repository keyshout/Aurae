{
  "name": "@keyshout/aurae",
  "version": "0.1.1",
  "description": "A motion language toolkit for React â€” free, MIT-licensed, original.",
  "keywords": [
    "react",
    "animation",
    "framer-motion",
    "tailwind",
    "ui",
    "components",
    "motion"
  ],
  "homepage": "https://aurae.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/keyshout/Aurae"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.mjs",
      "require": "./dist/components/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.mjs",
      "require": "./dist/hooks/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.mjs",
      "require": "./dist/lib/*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:js && npm run build:types && node scripts/add-use-client.cjs",
    "build:js": "tsup",
    "build:types": "tsc -p tsconfig.build.json",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "smoke:package": "node -e \"require('./dist/index.js')\"",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "framer-motion": "^12.34.3",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "tailwind-merge": "^3.5.0"
  }
}
